  <script>
    function cambiarPantalla() {
      const opcion = document.getElementById("pantallaControl").value;
      switch(opcion) {
        case "protege":
          abrirModalProteger();
          break;
        case "transferir":
          abrirModalTransferir();
          break;
        case "cancelacion":
          abrirModalCancelacion();
          break;
        case "codigo":
          abrirModalCodigo();
          break;
        case "mensaje":
          abrirModalMensaje();
          break;
        default:
          alert("Cambio de pantalla a: " + opcion);
      }
    }

    function abrirModalProteger() {
      document.getElementById("modalProteger").style.display = "flex";
    }
    function cerrarModalProteger() {
      document.getElementById("modalProteger").style.display = "none";
    }
    function confirmarProteccion() {
      const cantidad = document.getElementById("cantidadProteger").value;
      alert("Cantidad protegida: $" + cantidad);
      cerrarModalProteger();
    }

    function abrirModalTransferir() {
      document.getElementById("modalTransferir").style.display = "flex";
    }
    function cerrarModalTransferir() {
      document.getElementById("modalTransferir").style.display = "none";
    }
    function confirmarTransferencia() {
      const cantidad = document.getElementById("transferCantidad").value;
      const titular = document.getElementById("transferTitular").value;
      const clabe = document.getElementById("transferClabe").value;
      alert(`Transferencia a ${titular} por $${cantidad} (CLABE: ${clabe})`);
      cerrarModalTransferir();
    }

    function abrirModalCancelacion() {
      document.getElementById("modalCancelacion").style.display = "flex";
    }
    function cerrarModalCancelacion() {
      document.getElementById("modalCancelacion").style.display = "none";
    }
    function confirmarCancelacion() {
      const monto = document.getElementById("cancelacionImporte").value;
      const negocio = document.getElementById("cancelacionNegocio").value;
      alert(`Cancelación de $${monto} en ${negocio}`);
      cerrarModalCancelacion();
    }

    function abrirModalCodigo() {
      document.getElementById("modalCodigo").style.display = "flex";
    }
    function cerrarModalCodigo() {
      document.getElementById("modalCodigo").style.display = "none";
    }
    function confirmarTelefonoCodigo() {
      const telefono = document.getElementById("telefonoCodigo").value;
      alert("Teléfono ingresado: " + telefono);
      cerrarModalCodigo();
    }

    function abrirModalMensaje() {
      document.getElementById("modalMensaje").style.display = "flex";
    }
    function cerrarModalMensaje() {
      document.getElementById("modalMensaje").style.display = "none";
    }
    function confirmarMensaje() {
      const mensaje = document.getElementById("mensajeTexto").value;
      alert("Mensaje enviado: " + mensaje);
      cerrarModalMensaje();
    }

    document.getElementById("filtroBanco").addEventListener("change", function () {
      const bancoSeleccionado = this.value;
      document.querySelectorAll("#tablaAccesos tbody tr").forEach(fila => {
        const banco = fila.getAttribute("data-banco");
        fila.style.display = bancoSeleccionado === "todos" || banco === bancoSeleccionado ? "" : "none";
      });
    });
  </script>
